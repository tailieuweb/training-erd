<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <script src="/js/jquery-3.5.1.min.js"></script>
  <title>Student</title>
</head>

<body>
  <div class="container">
    <h1 class="title">Student</h1>
    <a href="/student/add" class="btn btn-success float-left m-2">Add</a>

    <form class="form-inline my-2 my-lg-0 float-right m-2" action="/student/search">
      <input class="form-control mr-sm-2" type="text" name="search" placeholder="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Code</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Class</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(function(item){ %>
        <tr class="student">
          <th scope="row"><%- item.code %></th>
          <th><%- item.name %></th>
          <td><%- item.email %></td>
          <td><%- item.school %></td>
          <td>
            <a href="/student/edit/<%- item._id%>" class="btn btn-primary">Edit</a>
            <form action="/student/delete/<%= item._id %>" method="get" class="d-inline">
              <button type="submit" onclick="return confirm('Are you sure you want to delete <%- item.name %>') "
                class="btn btn-danger">Delete</button>
            </form>
          </td>
          <td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% if(total > 0){%>
    <nav aria-label="Page navigation example">

      <ul class="pagination">
        <% if(page > 1){%>
        <li class="page-item"><a class="page-link" name="page" href="<%-baseUrl%><%-page-1%>">Previous</a></li>
        <% } %>
        <% while(start++ < total ) {%>
        <li class="page-item"><a class="page-link" name="page" href="<%-baseUrl%><%-start%>"><%- start %></a></li>
        <% } %>
        <% if(page < total) {%>
        <li class="page-item"><a class="page-link" name="page" href="<%-baseUrl%><%-page+1%>">Next</a></li>
        <% } %>
      </ul>
    </nav>
    <% } %>
  </div>
</body>

</html>